{
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "warn",
				"noMisleadingCharacterClass": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"style": {
				"useTemplate": "warn"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 180,
		"lineEnding": "lf"
	}
}

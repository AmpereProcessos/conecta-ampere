{
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn",
        "noMisleadingCharacterClass": "warn",
        "noConsole": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "useTemplate": "warn",
        "useBlockStatements": "off",
        "noMagicNumbers": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      }
    }
  },
  "formatter": {
    "indentStyle": "tab",
    "indentWidth": 1,
    "lineWidth": 180,
    "lineEnding": "lf"
  },
  "extends": ["ultracite"],
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json"
}
